<?xml version="1.0" encoding="iso-8859-1"?>

<root logo="logo.png">
	<announcement text="Story Template Custom Record Templates v1.0" font="emotefont" />

	<properties>
		<name>Story Template Custom Record Templates</name>
		<version>1.0</version>

		<author>Fen</author>
		<description>Adds a custom record-type output to story templates</description>

		<loadorder>1000</loadorder>
	</properties>
	<base>
		<includefile source="common/strings_common.xml"/>
		<includefile source="common/template_common.xml"/>
		<includefile source="common/record_defs.xml"/>
