		<script name="AddRecords" file="scripts/add_records.lua" />
		<script name="VariableManager" file="scripts/variable_manager.lua" />

		<icon name="tab_nodes" file="graphics/tab_nodes.png" />
		<icon name="tab_variables" file="graphics/tab_variables.png" />
	</base>
</root>
